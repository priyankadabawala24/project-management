<!DOCTYPE html>
<html>
  <head>
    <title>ProjectManagment</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <div class="container">
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
      <% if current_user %>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
          <%= link_to "Project Mangement", projects_path, class: "navbar-brand" %>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>

          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
              <% if @project.present? %>
                <li class="nav-item">
                  <%= link_to "Projects", projects_path, class: "nav-link" %>
                </li>
              <% end %>
              <li class="nav-item active">
                <%= link_to "Log out", destroy_user_session_path, data: { turbo_method: :delete }, class: "nav-link" %>
              </li>
              
            </ul>
          </div>
        </nav>
      <% end %>
      <div class="container-fluid bg-secondary bg-opacity-10 py-5 mt-3">
        <div class="container">
          <%= yield %>
        </div>
      </div>
    </div>
  </body>
</html>
